[color]
background = #c0c0c0
foreground = #000000
border = #fafafa
active = #000000
inactive = #606060
selection = #000080

[bar/base]
font-0 = MS Sans Serif:size=8;0
font-1 = FontAwesome:antialias=false:pixelsize=11;1
font-2 = Unifont:pixelsize=10;1
background = ${color.background}
foreground = ${color.foreground}
border-top-color = ${color.border}
border-top-size = 1
width = 100%
height = 24
bottom = true
padding-left = 2
padding-right = 0
tray-position = right
tray-padding = 3
tray-maxsize = 21
module-margin-left = 1
module-margin-right = 2
modules-left = xwindow
modules-right = mpris xbacklight pulseaudio battery date mouselock
enable-ipc = true
cursor-click = pointer
cursor-scroll = ns-resize

[bar/bspwm]
inherit = bar/base
modules-left = bspwm xwindow
wm-restack = bspwm

[module/bspwm]
; empty circle:  ; full circle:  ; dotted: 
type = internal/bspwm
format = <label-state><label-mode>
label-separator = "  "
label-separator-foreground = ${color.inactive}
label-empty = "%name%"
label-empty-padding = 1
label-empty-foreground = ${color.background}
label-empty-background = ${color.inactive}
label-focused = "%name%"
label-focused-padding = 1
label-focused-foreground = ${color.background}
label-focused-background = ${color.active}
label-occupied = "%name%"
label-occupied-padding = 1
label-occupied-foreground = ${color.background}
label-occupied-background = ${color.inactive}
label-urgent = "%name%"
label-urgent-padding = 1
label-urgent-foreground = ${color.background}
label-urgent-background = ${color.selection}

[module/bspwmfocus]
type = custom/script
exec = bspc subscribe node_focus | while read event monitor desktop node; do echo $node; done
tail = true

[module/xbacklight]
type = internal/xbacklight
format = <label>
label = " %percentage%%"

[module/mpris]
type = custom/script
exec = dmenu-mpv --monitor
tail = true
click-left = dmenu-mpv --toggle

[module/mouselock]
type = custom/ipc
hook-0 = echo ""
hook-1 = echo ""
initial = 2

[module/xwindow]
type = internal/xwindow
label = %title:0:150:...%

[module/date]
type = internal/date
interval = 15
date = "%Y-%m-%d %a"
time = "%H:%M"
label = "%date% %time% "
format = " <label>"

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
label-muted = " muted"
label-volume = "%percentage%%"
ramp-volume-0 =  
ramp-volume-1 =  
ramp-volume-2 =  

[module/battery]
type = internal/battery
battery = ${env:BATTERY:BAT0}
adapter = ${env:POWER_ADAPTER:AC0}
full-at = 98
poll-interval = 60
format-full = <label-full>
format-charging = <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
label-full =  %percentage%%
label-charging =  %percentage%%
label-discharging = %percentage%%
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[settings]
; Reload upon receiving XCB_RANDR_SCREEN_CHANGE_NOTIFY events
screenchange-reload = true

[global/wm]
margin-top = 2
margin-bottom = 2

