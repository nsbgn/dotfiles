#background = #c0c0c0
#background-alt = #000080
#foreground = #000000
#foreground-alt = #ffffff
#primary = #ffffff
#secondary = #000000


[bar/base]
bottom = true
background = ${colors.background}
foreground = ${colors.foreground}

border-top-size = 1
border-top-color = #fafafa

# For some reason, using pixelsize instead of size wrecks the fonts on Debian
#font-0 = Dina:size=8;0
font-0 = MS Sans Serif:size=8;0
font-1 = FontAwesome:antialias=false:pixelsize=11;1
font-2 = Unifont:pixelsize=10;1

width = 100%
height = 24

padding-left = 2
padding-right = 0

tray-position = right
tray-padding = 3
tray-maxsize = 21

module-margin-left = 1
module-margin-right = 2

modules-left = xwindow
modules-right = mpris xbacklight pulseaudio battery date mouselock

enable-ipc = true
cursor-click = pointer
cursor-scroll = ns-resize


[bar/i3]
inherit = bar/base
modules-left = i3 xwindow 
;wm-restack = i3


[bar/bspwm]
inherit = bar/base
modules-left = bspwm xwindow 
#bspfocus
wm-restack = bspwm


[module/mpris]
type = custom/script
exec = dmenu-mpv --monitor
tail = true
click-left = dmenu-mpv --toggle

[module/bspfocus]
type = custom/script
exec = bspc subscribe node_focus | while read event monitor desktop node; do echo $node; done
tail = true


[module/mouselock]
type = custom/ipc
hook-0 = echo ""
hook-1 = echo ""
initial = 2


[module/xwindow]
type = internal/xwindow
label = %title:0:120:...%


[module/bspwm]
type = internal/bspwm
format = <label-state><label-mode>

label-separator = "   "
label-separator-foreground = #606060

# 
label-empty = "%name%"
label-empty-foreground = #c0c0c0
label-empty-background = #606060

# 
label-focused = "%name%"
#label-focused-foreground = #000000

label-focused-foreground = #c0c0c0
label-focused-background = #000000


#label-occupied = 
# 
label-occupied = "%name%"
label-occupied-foreground = #c0c0c0
label-occupied-background = #606060


# 
label-urgent = "%name%"
label-urgent-foreground = #ffffff
label-urgent-background = #000080

label-empty-padding = 1
label-focused-padding = 1
label-occupied-padding = 1
label-urgent-padding = 1


[module/xbacklight]
type = internal/xbacklight
format = <label>
label = " %percentage%%"
#label = " %percentage%%"


[module/date]
type = internal/date
interval = 15
#date = "%Y-%m-%d"
#time = "%a %H:%M"
#label = " %time%    %date%"
date = "%Y-%m-%d %a"
time = "%H:%M"
label = "%date% %time% "
#label = " %date% %time% "
format = " <label>"


[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
label-muted = " muted"
label-volume = "%percentage%%"
ramp-volume-0 =  
ramp-volume-1 =  
ramp-volume-2 =  

[module/battery]
type = internal/battery
battery = ${env:BATTERY:BAT0}
adapter = ${env:POWER_ADAPTER:AC0}
full-at = 98
poll-interval = 60
format-full = <label-full>
format-charging = <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
label-full =  %percentage%%
label-charging =  %percentage%%
label-discharging = %percentage%%
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 


[settings]

; Reload upon receiving XCB_RANDR_SCREEN_CHANGE_NOTIFY events
screenchange-reload = true


[global/wm]
margin-top = 2
