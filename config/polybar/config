[bar/bspwm]
inherit = bar/base
modules-left = apps bspwm spacer xwindow bspwm-numwin
wm-restack = bspwm

[module/bspwm]
; empty circle:  ; full circle:  ; dotted: 
; ■ □ ☐ ☑ ☒
type = internal/bspwm
format = <label-state>
enable-scroll = false
label-separator = " "
label-separator-padding = 1
label-empty = ""
;"☐"
label-focused = ""
;"■"
label-occupied = ""
;"☐"
label-urgent = ""
;"☒"
;label-occupied = "☒ %name%"
; ;<label-mode>

; display number of windows
[module/bspwm-numwin]
type = custom/script
exec = (echo; bspc subscribe desktop_focus node_add node_remove node_transfer) | while read e; do bspc query -N -d focused -n .window | wc -l | awk '{if ($1>1) {printf ("(+"$1-1")\n")} else {printf "\n"}}'; done
tail = true
#click-left = bspc desktop --layout next
click-left = rofi -show window
click-right = xdotool getactivewindow windowkill

[module/bspwmfocus]
type = custom/script
exec = bspc subscribe node_focus | while read event monitor desktop node; do echo $node; done
tail = true

[module/xbacklight]
type = internal/xbacklight
format = <label>
label = "  %percentage%%"
;label = "  %percentage%%" cozette

[module/mpris]
type = custom/script
exec = dmenu-mpv --monitor
tail = true
click-left = dmenu-mpv --toggle

[module/mouselock]
type = custom/ipc
hook-0 = echo " mouse"
hook-1 = echo ""
initial = 2

[module/xwindow]
type = internal/xwindow
label = " %title:0:150:...%"
label-empty = —
click-left = rofi -show window
click-right = xdotool getactivewindow windowkill

[module/date]
type = internal/date
interval = 15
date = "%Y-%m-%d %a"
time = "%H:%M"
label = "  %date% %time%"
format = "<label>"
click-left = urxvtc -e sh -c "ncal; read -s -N 1 -t 1"

[module/pulseaudio]
