[color]
background = #c0c0c0
foreground = #000000
border = #fafafa
active = #000000
inactive = #606060
selection = #000080

[bar/base]
font-0 = Cozette:size=10;0
font-1 = Unifont:pixelsize=10;0
background = ${color.background}
foreground = ${color.foreground}
border-top-color = ${color.background}
border-top-size = 2
width = 100%
height = 20
top = true
padding-left = 2
padding-right = 1
tray-position = right
tray-padding = 3
tray-maxsize = 21
module-margin-left = 1
module-margin-right = 1
modules-left = xwindow
modules-right = mpris pulseaudio xbacklight wireless-network battery mouselock date xclose powerbutton
enable-ipc = true
cursor-click = pointer
cursor-scroll = ns-resize

[bar/bspwm]
inherit = bar/base
modules-left = bspwm-numwin bspwm xwindow
wm-restack = bspwm

[module/bspwm]
; empty circle:  ; full circle:  ; dotted: 
; ■ □ ☐ ☑ ☒
type = internal/bspwm
format = <label-state>
enable-scroll = false
label-separator = "  "
label-empty = "☐"
label-focused = "■"
label-occupied = "☐"
label-urgent = "☒"
;label-occupied = "☒ %name%"
; ;<label-mode>

; display number of windows
[module/bspwm-numwin]
type = custom/script
exec = (echo; bspc subscribe desktop_focus node_add node_remove node_transfer) | while read e; do bspc query -N -d focused -n .window | wc -l; done
tail = true

[module/bspwmfocus]
type = custom/script
exec = bspc subscribe node_focus | while read event monitor desktop node; do echo $node; done
tail = true

[module/xbacklight]
type = internal/xbacklight
format = <label>
label = " %percentage%%"

[module/mpris]
type = custom/script
exec = dmenu-mpv --monitor
tail = true
click-left = dmenu-mpv --toggle

[module/mouselock]
type = custom/ipc
hook-0 = echo " mouse"
hook-1 = echo ""
initial = 2

[module/xwindow]
type = internal/xwindow
label = " %title:0:150:...%"

[module/date]
type = internal/date
interval = 15
date = "%Y-%m-%d %a"
time = "%H:%M"
label = "%date% %time%"
format = "<label>"

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
label-muted = "婢 muted"
label-volume = "%percentage%%"
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
use-ui-max = false

[module/wireless-network]
type = internal/network
interface = wlan0
interval = 10.0
label-connected = "直 %signal%%"
label-disconnected = 睊
click-left = alacritty -e nmtui
# 

# bluetooth: ⍟ ?

[module/xclose]
type = custom/text
content = ""
click-left = xdotool getwindowfocus windowkill

[module/powerbutton]
type = custom/text
content = "⏻ "
click-left = dmenu-system
click-right = rofi -show drun
# 

[module/battery]
type = internal/battery
battery = ${env:BATTERY:BAT0}
adapter = ${env:ADAPTER:AC0}
full-at = 98
poll-interval = 60
format-full = <label-full>
format-charging = <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
label-full =  %percentage%%
label-charging =  %percentage%%
label-discharging = %percentage%%
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

#label-full =  %percentage%%
#label-charging =  %percentage%%
#label-discharging = %percentage%%

