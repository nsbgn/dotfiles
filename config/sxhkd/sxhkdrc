# generic keybinds

Print
	scrot "$HOME/screen-%Y%m%dT%H%M%S.png"

XF86Audio{Prev,Next,Pause,Play}
	playerctl --player=mpv {previous,next,pause,play}

super + i
	dmenu-pass

super + {_,shift} + p
	playerctl {play-pause,stop}

# Run programs
super + semicolon
	rofi -show drun

super + slash
	dmenu-cheatsheet

super + u
	dmenu-thesaurus

# TODO with shift opens in new desktop?

super + t
	urxvtc -cd $(xcwd.sh)

super + o; super + {l,m}
	dmenu-{library,mpv}

super + g
	vimb

super + G
	firefox

super + m
	urxvtc -e aerc

super + c
	telegram-desktop

super + backslash
	toggle-pointer

super + {comma,period}
	amixer -q sset Master 2%{-,+}

super + shift + {comma,period}
	xbacklight {-,+}2%

super + @Tab
	rofi -show window

super + z
	dmenu-system
