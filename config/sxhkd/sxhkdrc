# generic keybinds
# qwerasdf is taken by navigational cluster

F1
	if xdo id -N Firefox-esr > /dev/null; then \
		xdotool --sync key --clearmodifiers ctrl+tab \
	fi

F2
	notify-send "$(xcwd.sh)"

Print
	scrot "$HOME/screen-%Y%m%dT%H%M%S.png"

super + p
	playerctl --player=mpv play-pause

super + t
	urxvtc -cd "$(xcwd.sh)"

# super + m
# 	urxvtc -e aerc

super + semicolon
	dmenu-apps

super + Return
	dmenu-apps

super + g; super + {g,p,t,l,m}
	dmenu-{apps,pass,thesaurus,library,mpv}

super + {shift,_} + v
	amixer -q sset Master 2%{-,+}

super + {shift,_} + b
	light {-U,-A} 2
