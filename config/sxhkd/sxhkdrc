# generic keybinds
# qwerasdf is taken by navigational cluster

F1
	if xdo id -N Firefox-esr > /dev/null; then \
		xdotool --sync key --clearmodifiers ctrl+tab \
	fi

F2
	notify-send "$(xcwd.sh)"

Print
	scrot "$HOME/screen-%Y%m%dT%H%M%S.png"

super + p
	playerctl --player=mpv play-pause

super + t
	urxvtc -cd "$(xcwd.sh)"

super + {g,G}
	urxvtc {-cd $(xcwd.sh),} -e lf

super + m
	urxvtc -e aerc

super + semicolon
	dmenu-apps

super + o; super + {p,t,l,m}
	dmenu-{pass,thesaurus,library,mpv}

super + backslash
	toggle-pointer

super + {shift,_} + v
	amixer -q sset Master 2%{-,+}

super + {shift,_} + b
	xbacklight {-,+}2%
