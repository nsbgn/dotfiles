################
# wm independent

super + slash
	dmenu-cheatsheet

super + k
	dmenu-calc

# terminal emulator
super + t
#	alacritty --working-directory "$(xcwd)"
	urxvtc -cd $(xcwd.sh)

super + g
	vimb

super + G
	firefox

super + f
#	alacritty --working-directory "$(xcwd)" -e lf
	urxvtc -cd "$(xcwd.sh)" -e lf

super + m
#	alacritty --working-directory "$(xcwd)" -e aerc
	urxvtc -e aerc

super + r 
	cd $(xcwd.sh); zathura

super + c
	telegram-desktop

super + backslash
	toggle-pointer

Print
	scrot "$HOME/screen-%Y%m%dT%H%M%S.png"

super + {Down,Up}
	amixer -q sset Master 2%{-,+}

super + {Left,Right}
	xbacklight {-,+}2%

super + l
	dmenu-thesaurus

super + i
	dmenu-pass

super + {_,alt} + p
	{dmenu-mpv,playerctl play-pause}

XF86Audio{Prev,Next,Pause,Play}
	playerctl --player=mpv {previous,next,pause,play}

super + semicolon
	rofi -show drun

super + @space
	rofi -show window

super + Escape
	dmenu-system

################
# bspwm specific

super + x
	bspc node -c

# alternate between the tiled and monocle layout
super + @Return
	bspc node --state '~fullscreen'

#	bspc desktop --layout next

# focus/swap the node in the given direction
super + {_,alt + }{a,s,w,d,q,e}
	bspc node --{focus,swap} {west,south,north,east,@parent,@first}

# send node
super + ctrl + {a,s,w,d}
	bspwm-push {west,south,north,east}

# increase window size ratio
super + {minus,equal}
	if bspc query -N -n '@parent/{1,2}.focused' &> /dev/null; \
	then bspc node '@parent' --ratio '+10'; \
	else bspc node '@parent' --ratio '-10'; \
	fi

# focus/send to given desktop
super + {1-9,0} + {_, alt}
	desktop="^{1-9,10}"; \
	if ! bspc query --desktops --desktop "$desktop" &> /dev/null; then \
		desktop="$(uuidgen | cut -d'-' -f1)"; \
		bspc monitor --add-desktops "$desktop"; \
	fi; \
	bspc {desktop --focus "$desktop", node --to-desktop "$desktop" --follow}
