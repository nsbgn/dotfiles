# Set background color, dmenu theme and path for dmenu_run
#xsetroot -solid '#2f343f'
xrdb $HOME/.Xresources # load Xresources

# for siji
xset +fp /home/niels/.local/share/fonts
xset fp rehash

# Set battery and power adapter names
export POWER_ADAPTER="$(find -L /sys/class/power_supply -mindepth 1 -maxdepth 1 \
    | xargs -I{} sh -c "grep -qw {}/type -e Mains && echo {}" \
    | cut -d'/' -f5)"

export BATTERY="$(find -L /sys/class/power_supply -mindepth 1 -maxdepth 1 \
    | xargs -I{} sh -c "grep -qw {}/type -e Battery && echo {}" \
    | cut -d'/' -f5)"

keyboard-config & # set keyboard shortcuts
lxpolkit & # policy kit
dunst & # notification daemon
unclutter -root -idle 2 & # hide mouse when not in use for two seconds
redshift & # nighttime screen colours
urxvtd -q -f -o & # terminal daemon
lf -server & # file manager daemon
dmenu-mpv --initialise & # mpv daemon

#polybar i3 & # status bar
#nm-applet & # network manager applet
#blueman-applet & # bluetooth manager applet
exec i3
#exec startxfce4
#exec openbox
