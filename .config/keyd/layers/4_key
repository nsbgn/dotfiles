[global]
chord_timeout = 50
overload_tap_timeout = 300
oneshot_timeout = 500
default_layout = qwerty
disable_modifier_guard = 1

[main]
TL3 = oneshot(nav)
TL1 = space
TR1 = oneshot(shift)
TR2 = oneshot(num)

1L6 = tab
2L6 = backspace
# 1R6 = esc
# 2R6 = enter

[empty]

[num]
1L5 = \
1L4 = [
1L3 = +
1L2 = #
1L1 = ]
1R1 = ^
1R2 = 7
1R3 = 8
1R4 = 9
1R5 = oneshotm(double_colon, .)

2L5 = *
2L4 = (
2L3 = -
2L2 = =
2L1 = )
2R1 = ~
2R2 = 4
2R3 = 5
2R4 = 6
2R5 = 0

3L5 = /
3L4 = {
3L3 = $
3L2 = _
3L1 = }
3R1 = %
3R2 = 1
3R3 = 2
3R4 = 3
3R5 = /


[double_colon]
1R5 = macro(backspace :)


