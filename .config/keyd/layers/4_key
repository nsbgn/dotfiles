[nav]
# scrolllock, sysrq, pause, insert, compose, capslock

# 1L6 = esc
1L5 = swap(meta2)
1L4 = home
1L3 = up
1L2 = end
1L1 = delete

# 2L6 = backspace
2L5 = swap(control2)
2L4 = left
2L3 = down
2L2 = right
2L1 = enter

3L5 = swap(alt2)
3L4 = swap(control2)
3L3 = pageup
3L2 = pagedown
3L1 = sysrq

1R1 = <
1R2 = nop
1R3 = "
1R4 = >
1R5 = &

2R1 = ~
2R2 = enter
2R3 = '
2R4 = ?
2R5 = \

3R1 = %
3R2 = @
3R3 = `
3R4 = !
3R5 = |

